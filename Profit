package JavaAssignments;

import java.util.Scanner;

public class AssignmentFour {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the Cost price an item");
		int cp =sc.nextInt();
		System.out.println("Enter the Selling price an item");
		int sp =sc.nextInt();
		
		if(cp>sp){
			System.out.println("Seller has incurred a loss of value: "+(cp-sp));
		}else{
			System.out.println("Seller has incurred a profit of value: "+(sp-cp));	
		}
		
		

	}

}
